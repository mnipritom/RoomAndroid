<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical"

    android:weightSum="4"

    tools:context=".ProjectInfo">

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_gravity="center"

            android:src="@drawable/app_icon_final"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>
        <TextView

            android:layout_gravity="center"

            android:text="@string/ProjectTitle"

            android:layout_marginLeft="10dp"

            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"

        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"

                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Author : ">
            </TextView>
            <ImageView

                android:layout_gravity="center"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/project_author">

            </ImageView>

            <TextView
                android:layout_gravity="center"

                android:layout_marginLeft="5dp"

                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ProjectAuthor">


            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_gravity="center"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/wechat">

            </ImageView>

            <TextView

                android:layout_marginLeft="5dp"

                android:layout_gravity="center"

                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ProjectAuthorContact">


            </TextView>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>